<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:option"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_option_top_radius"
        ohos:padding="24vp"
        ohos:text="删除"
        ohos:text_color="red"
        ohos:text_size="18fp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#ddd">

        <Button
            ohos:top_margin="0.5vp"
            ohos:id="$+id:cancel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_options"
            ohos:padding="24vp"
            ohos:text="取消"
            ohos:text_color="#acacac"
            ohos:text_size="18fp"/>
    </DirectionalLayout>

</DirectionalLayout>