<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_toast_bottom"
    ohos:orientation="vertical">


    <Text
        ohos:id="$+id:toast_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="12vp"
        ohos:bottom_padding="0"
        ohos:text="title"
        ohos:text_alignment="center"
        ohos:text_size="20fp"
        ohos:text_weight="500"/>

    <Text
        ohos:id="$+id:toast_body"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="24vp"
        ohos:multiple_lines="true"
        ohos:text="body"
        ohos:text_alignment="center"
        ohos:text_size="16fp"
        ohos:text_color="#7b7b7b"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:l_option"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_option_LB_radius"
            ohos:padding="12vp"
            ohos:right_margin="0.5vp"
            ohos:text="删除"
            ohos:text_color="red"
            ohos:text_size="18fp"
            ohos:top_margin="0.5vp"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:r_cancel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_option_RB_radius"
            ohos:padding="12vp"
            ohos:text="取消"

            ohos:text_color="#acacac"
            ohos:text_size="18fp"
            ohos:top_margin="0.5vp"
            ohos:weight="1"/>
    </DirectionalLayout>
</DirectionalLayout>

