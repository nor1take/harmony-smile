<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F2F3F7"
    ohos:orientation="vertical"
    >

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="12vp"
        ohos:right_padding="24vp"
        >

        <Image
            ohos:id="$+id:back"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:button_left_top"
            ohos:image_src="$media:ic_public_cancel_filled"
            ohos:layout_alignment="right"
            ohos:padding="12vp"
            />
    </DirectionalLayout>

    <Text
        ohos:id="$+id:my_userName"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="top"
        ohos:margin="24vp"
        ohos:text="null"
        ohos:text_size="30fp"
        ohos:text_weight="700"
        />

    <Text
        ohos:id="$+id:my_post"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_options"
        ohos:element_left="$media:ic_public_file"
        ohos:element_padding="24vp"
        ohos:padding="24vp"
        ohos:text="我的发帖"
        ohos:text_size="18fp"
        ohos:text_weight="500"
        />

    <Text
        ohos:id="$+id:my_follow"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_options"
        ohos:element_left="$media:ic_public_highlights"
        ohos:element_padding="24vp"
        ohos:padding="24vp"
        ohos:text="我的关注"
        ohos:text_size="18fp"
        ohos:text_weight="500"
        />

    <Text
        ohos:id="$+id:my_comment"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_options"
        ohos:element_left="$media:ic_public_comments"
        ohos:element_padding="24vp"
        ohos:padding="24vp"
        ohos:text="我的评论"
        ohos:text_size="18fp"
        ohos:text_weight="500"
        />

    <Text
        ohos:id="$+id:help"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_options"
        ohos:element_left="$media:ic_public_help"
        ohos:element_padding="24vp"
        ohos:padding="24vp"
        ohos:text="使用帮助"
        ohos:text_size="18fp"
        ohos:text_weight="500"
        />
</DirectionalLayout>